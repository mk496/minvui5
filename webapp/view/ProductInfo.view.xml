<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" controllerName="com.sap.build.standard.smartStore.controller.ProductInfo">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page showHeader="true" title="{i18n>productHeaderTitle}" showFooter="false">
			        <content>
					    <uxap:ObjectPageLayout showTitleInHeaderContent="true" showHeaderContent="true" showAnchorBar="true" subSectionLayout="TitleOnTop">
					        <uxap:headerContent/>
					        <uxap:headerTitle>
					            <uxap:ObjectPageHeader objectImageURI="/webapp/localService/{Image}" objectTitle="{ProductDescription}" objectSubtitle="{Id}" headerDesign="Light" objectImageShape="Square" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false" isActionAreaAlwaysVisible="true">
					                <uxap:breadCrumbsLinks/>
					                <uxap:navigationBar>
					                    <Bar design="Auto">
					                        <contentLeft>
					                            <Button text="" type="Back" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="onNavBack"/>
					                        </contentLeft>
					                        <contentMiddle/>
					                        <contentRight/>
					                    </Bar>
					                </uxap:navigationBar>
					            </uxap:ObjectPageHeader>
					        </uxap:headerTitle>
					        <uxap:sections>
					            <uxap:ObjectPageSection visible="true">
					                <uxap:subSections>
					                    <uxap:ObjectPageSubSection title="{i18n>productSubHeaderInfo}" mode="Expanded">
					                        <uxap:blocks>
					                        	<layout:VerticalLayout width="100%">
													<layout:content>
														<FlexBox
															width="95%"
															alignItems="Stretch"
															fitContainer="true">
															<items minHeight="100px">
															<ObjectListItem intro="" title="{i18n>productLifeRemaining}" icon="sap-icon://pending" number="{LifeRemaining}" numberUnit="" numberState="{LifeRemainingThershold}" type="Active" selected="false">
																	<layoutData>
																		<FlexItemData growFactor="1" />
																	</layoutData>
																</ObjectListItem>
															</items>
														</FlexBox>
													</layout:content>
												</layout:VerticalLayout>
												<layout:VerticalLayout width="100%">
													<layout:content>
														<FlexBox
															width="95%"
															alignItems="Stretch"
															fitContainer="true">
															<items minHeight="100px">
																<ObjectListItem intro="" title="{i18n>productLocation}" icon="sap-icon://functional-location" number="{Location}" numberUnit="" type="Active" selected="false">
																	<layoutData>
																		<FlexItemData growFactor="1" />
																	</layoutData>
																</ObjectListItem>
															</items>
														</FlexBox>
													</layout:content>
												</layout:VerticalLayout>
												<layout:VerticalLayout width="100%">
													<layout:content>
														<FlexBox
															width="95%"
															alignItems="Stretch"
															fitContainer="true">
															<items minHeight="100px">
																<ObjectListItem intro="" title="{i18n>productInStock}" icon="sap-icon://product" number="{InStock}" numberUnit="{Unit}" type="Active" selected="false">
																	<layoutData>
																		<FlexItemData growFactor="1" />
																	</layoutData>
																</ObjectListItem>
															</items>
														</FlexBox>
													</layout:content>
												</layout:VerticalLayout>
												<layout:VerticalLayout width="100%">
													<layout:content>
														<FlexBox
															width="95%"
															alignItems="Stretch"
															fitContainer="true">
															<items minHeight="100px">
																<ObjectListItem intro="" title="{i18n>productStatus}" icon="sap-icon://order-status" number="{Status}" numberUnit="" numberState="{StatusColor}" type="Active" selected="false">
																	<layoutData>
																		<FlexItemData growFactor="1" />
																	</layoutData>
																</ObjectListItem>
															</items>
														</FlexBox>
													</layout:content>
												</layout:VerticalLayout>
					                        </uxap:blocks>
					                        <uxap:moreBlocks/>
					                        <uxap:actions/>
					                    </uxap:ObjectPageSubSection>
					                </uxap:subSections>
					                <uxap:customAnchorBarButton/>
					            </uxap:ObjectPageSection>
					            <uxap:ObjectPageSection titleUppercase="true" visible="true">
					                <uxap:subSections>
					                    <uxap:ObjectPageSubSection title="{i18n>productSubHeaderInstructions}" mode="Expanded">
					                        <uxap:blocks>
					                            <Label text="{StoringInstruction}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
					                        </uxap:blocks>
					                        <uxap:moreBlocks/>
					                        <uxap:actions/>
					                    </uxap:ObjectPageSubSection>
					                </uxap:subSections>
					                <uxap:customAnchorBarButton/>
					            </uxap:ObjectPageSection>
					        </uxap:sections>
					        <uxap:footer/>
					    </uxap:ObjectPageLayout>
    				</content>
    			</Page>
    		</pages>
    	</App>
    </Shell>
</mvc:View>